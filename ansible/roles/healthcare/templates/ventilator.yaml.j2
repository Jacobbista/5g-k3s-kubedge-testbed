apiVersion: apps/v1
kind: Deployment
metadata:
  name: ventilator
  namespace: healthcare
  labels:
    app: ventilator
    type: medical-device
spec:
  replicas: 2
  selector:
    matchLabels:
      app: ventilator
  template:
    metadata:
      labels:
        app: ventilator
        type: medical-device
    spec:
      containers:
      - name: ventilator
        image: nginx:alpine
        ports:
        - containerPort: 80
        env:
        - name: DEVICE_TYPE
          value: "ventilator"
        - name: DEVICE_ID
          value: "{{ '{{' }} .HOSTNAME {{ '}}' }}"
        - name: PRESSURE_SETTING
          value: "15"
        - name: TIDAL_VOLUME
          value: "500"
        resources:
          requests:
            memory: "128Mi"
            cpu: "100m"
          limits:
            memory: "256Mi"
            cpu: "200m"
        livenessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: ventilator
  namespace: healthcare
  labels:
    app: ventilator
spec:
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
  selector:
    app: ventilator
