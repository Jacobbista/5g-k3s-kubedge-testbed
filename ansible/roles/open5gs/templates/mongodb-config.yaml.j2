apiVersion: v1
kind: ConfigMap
metadata:
  name: mongodb-config
  namespace: open5gs
data:
  mongod.conf: |
    # MongoDB configuration
    storage:
      dbPath: /data/db
      journal:
        enabled: true
    systemLog:
      destination: file
      logAppend: true
      path: /var/log/mongodb/mongod.log
    net:
      port: 27017
      bindIp: 0.0.0.0
    security:
      authorization: disabled
    replication:
      replSetName: "open5gs"
