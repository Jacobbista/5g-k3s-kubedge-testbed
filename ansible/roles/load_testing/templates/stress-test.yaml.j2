apiVersion: apps/v1
kind: Deployment
metadata:
  name: stress-test
  namespace: load-testing
  labels:
    app: stress-test
spec:
  replicas: 5
  selector:
    matchLabels:
      app: stress-test
  template:
    metadata:
      labels:
        app: stress-test
    spec:
      containers:
      - name: stress-test
        image: progrium/stress:latest
        command: ["stress"]
        args: ["--cpu", "2", "--io", "1", "--vm", "1", "--vm-bytes", "64M"]
        resources:
          requests:
            memory: "128Mi"
            cpu: "200m"
          limits:
            memory: "256Mi"
            cpu: "500m"
        livenessProbe:
          exec:
            command:
            - pgrep
            - stress
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          exec:
            command:
            - pgrep
            - stress
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: stress-test
  namespace: load-testing
  labels:
    app: stress-test
spec:
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
  selector:
    app: stress-test
