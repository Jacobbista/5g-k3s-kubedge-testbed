apiVersion: apps/v1
kind: Deployment
metadata:
  name: network-load
  namespace: load-testing
  labels:
    app: network-load
spec:
  replicas: 3
  selector:
    matchLabels:
      app: network-load
  template:
    metadata:
      labels:
        app: network-load
    spec:
      containers:
      - name: network-load
        image: nginx:alpine
        ports:
        - containerPort: 80
        env:
        - name: LOAD_TYPE
          value: "network"
        - name: REQUESTS_PER_SECOND
          value: "100"
        resources:
          requests:
            memory: "64Mi"
            cpu: "100m"
          limits:
            memory: "128Mi"
            cpu: "200m"
        livenessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: network-load
  namespace: load-testing
  labels:
    app: network-load
spec:
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
  selector:
    app: network-load
