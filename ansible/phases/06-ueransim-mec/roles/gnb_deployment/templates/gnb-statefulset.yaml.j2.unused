# ============================================================================
# THIS TEMPLATE IS NO LONGER IN USE - KEPT AS BACKUP
# ============================================================================
#
# REASON: gNBs are stateless applications and do not require StatefulSet.
#         We now use Deployment to enable pod naming with hash:
#         gnb-1-{replicaset-hash}-{random} instead of gnb-1-0
#
# SEE: gnb-deployment.yaml.j2 (currently active template)
#
# StatefulSet would be useful in the future only if you need:
#   - Stable network identity (DNS: gnb-1-0.gnb-1.svc)
#   - Persistent storage per pod (dedicated PVCs)
#   - Sequential startup/termination order
#
# Disabled on: 2025-10-21
# ============================================================================

{% for cell in ueransim_topology.cells %}
---
# Headless Service for {{ cell.gnb.name }}
apiVersion: v1
kind: Service
metadata:
  name: {{ cell.gnb.name }}
  namespace: {{ namespace }}
  labels:
    app: {{ cell.gnb.name }}
    cell-id: "{{ cell.id }}"
spec:
  clusterIP: None
  selector:
    app: {{ cell.gnb.name }}
  ports:
    - name: ngap
      port: 38412
      protocol: SCTP
    - name: gtpu
      port: 2152
      protocol: UDP

---
# StatefulSet for {{ cell.gnb.name }}
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{ cell.gnb.name }}
  namespace: {{ namespace }}
  labels:
    app: {{ cell.gnb.name }}
    cell-id: "{{ cell.id }}"
    component: gnb
spec:
  serviceName: {{ cell.gnb.name }}
  replicas: 1
  selector:
    matchLabels:
      app: {{ cell.gnb.name }}
  template:
    metadata:
      labels:
        app: {{ cell.gnb.name }}
        cell-id: "{{ cell.id }}"
        component: gnb
      annotations:
        k8s.v1.cni.cncf.io/networks: |
          [
            {"name": "n2-cell-{{ cell.id }}", "interface": "n2"},
            {"name": "n3-cell-{{ cell.id }}", "interface": "n3"}
          ]
    spec:
      nodeSelector:
        kubernetes.io/hostname: {{ cell.gnb.node | default(ueransim_topology.defaults.node_defaults.gnb) }}
      containers:
        - name: gnb
          image: {{ ueransim_topology.defaults.image }}
          imagePullPolicy: IfNotPresent
          securityContext:
            privileged: true
            capabilities:
              add: ["NET_ADMIN", "SYS_ADMIN"]
          command: ["{{ gnb_binary_path }}"]
          args: ["-c", "{{ gnb_config_path }}"]
          ports:
            - containerPort: 38412
              name: ngap
              protocol: SCTP
            - containerPort: 2152
              name: gtpu
              protocol: UDP
          volumeMounts:
            - name: config
              mountPath: /UERANSIM/config
              readOnly: true
          readinessProbe:
            tcpSocket:
              port: 38412
            initialDelaySeconds: 10
            periodSeconds: 5
            timeoutSeconds: 3
            successThreshold: 1
            failureThreshold: 3
          livenessProbe:
            exec:
              command: ["pgrep", "-f", "nr-gnb"]
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 3
          resources:
            requests:
              cpu: "500m"
              memory: "512Mi"
            limits:
              cpu: "1000m"
              memory: "1Gi"
      volumes:
        - name: config
          configMap:
            name: {{ cell.gnb.name }}-config
{% endfor %}


